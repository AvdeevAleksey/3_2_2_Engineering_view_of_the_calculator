<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/simple_calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111111"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="end"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:text="@string/button_zero"
            android:maxLines="1"
            android:background="#111111"/>
        <LinearLayout
            android:id="@+id/firstRowLayout"
            android:layout_below="@id/result"
            android:layout_toLeftOf="@id/btnDivision"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnClear"
                android:layout_weight="1"
                android:text="@string/button_clear"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_weight="1"
                android:text="@string/button_plus_minus"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnPercent"
                android:layout_weight="1"
                android:text="@string/button_percent"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondRowLayout"
            android:layout_below="@id/firstRowLayout"
            android:layout_toLeftOf="@id/btnMultiplication"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnSeven"
                android:layout_weight="1"
                android:text="@string/button_seven"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnEight"
                android:layout_weight="1"
                android:text="@string/button_eight"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnNine"
                android:layout_weight="1"
                android:text="@string/button_nine"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/thirdRowLayout"
            android:layout_below="@id/secondRowLayout"
            android:layout_toLeftOf="@id/btnMinus"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnFore"
                android:layout_weight="1"
                android:text="@string/button_for"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnFive"
                android:layout_weight="1"
                android:text="@string/button_five"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnSix"
                android:layout_weight="1"
                android:text="@string/button_six"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fourthRowLayout"
            android:layout_toLeftOf="@id/btnPlus"
            android:layout_below="@id/thirdRowLayout"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:onClick="anyButtonClicked"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnOne"
                android:text="@string/button_one"
                android:onClick="anyButtonClicked"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnTwo"
                android:layout_weight="1"
                android:text="@string/button_two"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnThree"
                android:layout_weight="1"
                android:text="@string/button_three"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fifthRowLayout"
            android:layout_below="@id/fourthRowLayout"
            android:layout_toLeftOf="@id/btnSubmit"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnZero"
                android:layout_weight="2"
                android:text="@string/button_zero"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
            <Button
                android:id="@+id/btnPoint"
                android:layout_weight="1"
                android:text="@string/button_point"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/result"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="@string/button_division"
            android:onClick="anyButtonClicked"
            android:textColor="#ECECEC"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btnMultiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btnDivision"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:isScrollContainer="false"
            android:shadowColor="#FF9800"
            android:text="@string/button_multiplication"
            android:onClick="anyButtonClicked"
            android:textColor="#ECECEC"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btnMultiplication"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="@string/button_minus"
            android:onClick="anyButtonClicked"
            android:textColor="#ECECEC"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btnMinus"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="@string/button_plus"
            android:onClick="anyButtonClicked"
            android:textColor="#ECECEC"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btnPlus"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:text="@string/button_submit"
            android:onClick="anyButtonClicked"
            android:textColor="#ECECEC"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/engineering_calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A1EDA5"
        android:visibility="invisible">

        <TextView
            android:id="@+id/resultEng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="end"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:text="@string/button_zero"
            android:maxLines="1"
            android:background="#111111"/>
        <LinearLayout
            android:id="@+id/firstRowLayoutEng"
            android:layout_below="@id/resultEng"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnClearEng"
                android:layout_weight="1"
                android:text="@string/button_clear"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnPlusMinusEng"
                android:layout_weight="1"
                android:text="@string/button_plus_minus"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnPercentEng"
                android:layout_weight="1"
                android:text="@string/button_percent"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnDivisionEng"
                android:layout_weight="1"
                android:text="@string/button_division"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btnMc"
                android:layout_weight="1"
                android:text="@string/button_MC"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondRowLayoutEng"
            android:layout_below="@id/firstRowLayoutEng"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnSevenEng"
                android:layout_weight="1"
                android:text="@string/button_seven"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnEightEng"
                android:layout_weight="1"
                android:text="@string/button_eight"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnNineEng"
                android:layout_weight="1"
                android:text="@string/button_nine"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnMultiplicationEng"
                android:layout_weight="1"
                android:text="@string/button_multiplication"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:shadowColor="#FF9800"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btnMr"
                android:layout_weight="1"
                android:text="@string/button_MR"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/thirdRowLayoutEng"
            android:layout_below="@id/secondRowLayoutEng"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnForeEng"
                android:layout_weight="1"
                android:text="@string/button_for"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnFiveEng"
                android:layout_weight="1"
                android:text="@string/button_five"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnSixEng"
                android:layout_weight="1"
                android:text="@string/button_six"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnMinusEng"
                android:layout_weight="1"
                android:text="@string/button_minus"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btnMs"
                android:layout_weight="1"
                android:text="@string/button_MS"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fourthRowLayoutEng"
            android:layout_below="@id/thirdRowLayoutEng"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnOneEng"
                android:text="@string/button_one"
                android:onClick="anyButtonClicked"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnTwoEng"
                android:layout_weight="1"
                android:text="@string/button_two"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnThreeEng"
                android:layout_weight="1"
                android:text="@string/button_three"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnPlusEng"
                android:layout_weight="1"
                android:text="@string/button_plus"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btnMPlus"
                android:layout_weight="1"
                android:text="@string/button_M_plus"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fifthRowLayoutEng"
            android:layout_below="@id/fourthRowLayoutEng"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnZeroEng"
                android:layout_weight="2"
                android:text="@string/button_zero"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnPointEng"
                android:layout_weight="1"
                android:text="@string/button_point"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btnSubmitEng"
                android:layout_weight="1"
                android:text="@string/button_submit"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
            <Button
                android:id="@+id/btnMMinus"
                android:layout_weight="1"
                android:text="@string/button_M_minus"
                android:onClick="anyButtonClicked"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textColor="#ECECEC"
                android:textSize="30sp" />
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/switchBtn"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:textColor="#ECECEC"
        android:background="#3C673E"/>
</FrameLayout>